@model Mnema.Models.User
@{
    ViewBag.Title = Model.Name;
}

<h1>@if (Model.Avatar != null)
{<img style='width:50px; height:50px; border-radius: 50%;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />}
</h1>
<hr>
<p>@Model.Name</p>
<p>@Model.Email</p>

<a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a> <br>
<a asp-area="" asp-controller="Profile" asp-action="UploadPhoto">Upload Photo</a> <br>
<a asp-area="" asp-controller="Profile" asp-action="DeleteProfileAsync">Delete profile</a> <br>



<h3>My photos</h3>
<div class="w3-row">
    @foreach(var photo in Model.Photos){
    @:<p ><img src="@Url.Content(photo.Path)" ALT="@photo.Description" WIDTH=300 HEIGHT=300"></p>
    }
</div>




